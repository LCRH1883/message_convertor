<Window x:Class="MsgSecure.Viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MsgSecure Viewer" Height="600" Width="900">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="{Binding Status}" />
        </StatusBar>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Open..." Command="{Binding OpenCommand}" />
            <Separator />
            <TextBlock Text="Zoom:" VerticalAlignment="Center" Margin="8,0,4,0" />
            <Slider Width="140"
                    Minimum="10"
                    Maximum="28"
                    SmallChange="1"
                    LargeChange="2"
                    Value="{Binding PreviewFontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="{Binding PreviewFontSize, StringFormat={}{0:N0}px}" VerticalAlignment="Center" Margin="4,0,0,0" />
        </ToolBar>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>
            <ListView Grid.Row="0" ItemsSource="{Binding Messages}" SelectedItem="{Binding SelectedMessage}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="From" DisplayMemberBinding="{Binding Sender}" Width="220" />
                        <GridViewColumn Header="Subject" DisplayMemberBinding="{Binding Subject}" Width="420" />
                        <GridViewColumn Header="Date" DisplayMemberBinding="{Binding SentAt}" Width="200" />
                    </GridView>
                </ListView.View>
            </ListView>
            <Grid Grid.Row="1" Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Margin="0,0,0,8" Visibility="{Binding HasAttachments, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="Attachments" FontWeight="Bold" Margin="0,0,0,4" />
                    <ItemsControl ItemsSource="{Binding Attachments}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <TextBlock Text="{Binding Filename}" Width="220" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Text="{Binding SizeDisplay}" Margin="8,0,8,0" />
                                    <Button Content="Open" Margin="0,0,4,0" Command="{Binding DataContext.OpenAttachmentCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" IsEnabled="{Binding HasData}" />
                                    <Button Content="Save As..." Command="{Binding DataContext.SaveAttachmentCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" IsEnabled="{Binding HasData}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                <WebBrowser Grid.Row="1" x:Name="PreviewBrowser" />
            </Grid>
        </Grid>
    </DockPanel>
</Window>
