<Window x:Class="MsgSecure.Viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MsgSecure Viewer" Height="450" Width="800">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="{Binding Status}" />
        </StatusBar>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Open..." Command="{Binding OpenCommand}" />
        </ToolBar>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <ListView Grid.Row="0" ItemsSource="{Binding Messages}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="From" DisplayMemberBinding="{Binding Sender}" Width="200" />
                        <GridViewColumn Header="Subject" DisplayMemberBinding="{Binding Subject}" Width="400" />
                        <GridViewColumn Header="Date" DisplayMemberBinding="{Binding SentAt}" Width="200" />
                    </GridView>
                </ListView.View>
            </ListView>
            <ScrollViewer Grid.Row="1" Margin="4" VerticalScrollBarVisibility="Auto">
                <TextBlock Text="Select a message to preview." />
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>
